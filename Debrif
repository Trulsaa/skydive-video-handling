#!/bin/bash	

disk=/Volumes/No\ Name
kilde="$disk"/DCIM/100GOPRO
arkiv=~/Desktop/$(date +%Y%m%d)

#Lager ny arkivmappe dersom den ikke eksisterer
mkdir -p "$arkiv"

#kopierer alle filer fra kilde til akriv, men overskriver ikke og sletter .LRV og .THM filer
mv -n "$kilde"/*.MP4 "$arkiv"
rm "$kilde"/*.LRV
rm "$kilde"/*.THM

#Kobler fra volumet
diskutil unmount "$disk"

#Åpner mappen til nyeste fil i arkivet og åpner samme fil i Quicktime
open "$arkiv"
open "$arkiv"/*.MP4

#Åpner videoen flippet opp ned og i fullscreen i VLC
#/Applications/VLC.app/Contents/MacOS/VLC "$file" --video-filter=transform --transform-type=180 --fullscreen
